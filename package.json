{
  "name": "@g2a/request-id",
  "version": "1.1.0",
  "description": "Library providing utility functions for manipulating and generating request ids",
  "repository": {
    "type": "git",
    "url": "https://github.com/g2a-com/node-request-id"
  },
  "license": "UNLICENSED",
  "files": [
    "dist/*",
    "src/*",
    "typings/*"
  ],
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "rm -rf dist typings && tsc",
    "prepack": "npm run build",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "./test/tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "testRegex": "/test/.*.spec.ts",
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "verbose": true
  },
  "dependencies": {
    "@types/node": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.1",
    "jest": "^24.1.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.0.3"
  }
}
